                        <SetVariable name="Size">120me,23f</SetVariable>
                        <SetVariable name="icon">Decks-4</SetVariable>
                        <SetVariable name="control">[DeckRow1],show_row</SetVariable>
                        <SetVariable name="text">Decks 1+2</SetVariable>
